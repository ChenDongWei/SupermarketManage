<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.java1234.dao.TicketDao">

	
	<select id="find" parameterType="Map" resultType="com.java1234.entity.Ticket">
		select * from t_cashier
		<where>
			<if test="ticketCode!=null and ticketCode!='' ">
				and ticketCode like #{ticketCode}
			</if>
		</where>
		<if test="start!=null and size!=null">
			limit #{start},#{size}
		</if>
	</select>
	
	<select id="getTotal" parameterType="Map" resultType="Long">
		select count(*) from t_cashier
		<where>
			<if test="ticketCode!=null and ticketCode!='' ">
				and ticketCode like #{ticketCode}
			</if>
		</where>
	</select>
	
	<select id="findTicketGoods" parameterType="Map" resultType="com.java1234.entity.Ticket">
		select * from t_cashier c right join t_ticket_goods tg on c.ticketCode = tg.ticketCode
		<where>
			<if test="ticketCode!=null and ticketCode!='' ">
				and c.ticketCode = #{ticketCode}
			</if>
		</where>
		<if test="start!=null and size!=null">
			limit #{start},#{size}
		</if>
	</select>
</mapper> 